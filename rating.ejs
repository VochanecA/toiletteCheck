                    feedbackHeader: "Dil Seçin",
                    feedbackPrompt: "Geri bildiriminize değer veriyoruz! Lütfen tuvalet hizmetlerimizi değerlendirmek için bir dakikanızı ayırın. Geri bildiriminiz, deneyimi geliştirmemiz için çok önemli.",
                    cleanliness: "Temizlik",
                    facilities: "Tesisler",
                    service: "Servis",
                    smell: "Koku"
                },
                ru: {
                    feedbackHeader: "Выберите язык",
                    feedbackPrompt: "Мы ценим ваш отзыв! Пожалуйста, уделите минуту, чтобы оценить наши туалетные услуги. Ваше мнение важно для улучшения нашего сервиса.",
                    cleanliness: "Чистота",
                    facilities: "Оборудование",
                    service: "Обслуживание",
                    smell: "Запах"
                },
                he: {
                    feedbackHeader: "בחר שפה",
                    feedbackPrompt: "אנחנו מעריכים את המשוב שלך! אנא הקדש רגע לדרג את שירותי השירותים שלנו. המשוב שלך חשוב לנו לשיפור החוויה.",
                    cleanliness: "ניקיון",
                    facilities: "מתקנים",
                    service: "שירות",
                    smell: "ריח"
                },
                de: {
                    feedbackHeader: "Sprache auswählen",
                    feedbackPrompt: "Wir schätzen Ihr Feedback! Bitte nehmen Sie sich einen Moment Zeit, um unsere Toiletten zu bewerten. Ihr Feedback ist entscheidend für Verbesserungen.",
                    cleanliness: "Sauberkeit",
                    facilities: "Einrichtungen",
                    service: "Service",
                    smell: "Geruch"
                }
            };

            // Update the text content with selected language translations
            document.getElementById('feedback-header').textContent = translations[language].feedbackHeader;
            document.getElementById('feedback-prompt').textContent = translations[language].feedbackPrompt;
            document.getElementById('cleanliness-label').textContent = translations[language].cleanliness;
            document.getElementById('facilities-label').textContent = translations[language].facilities;
            document.getElementById('service-label').textContent = translations[language].service;
            document.getElementById('smell-label').textContent = translations[language].smell;
        }

        function updateAverageRating() {
            const cards = document.querySelectorAll('.card');
            let totalRating = 0;
            let count = 0;

            cards.forEach(card => {
                const selectedSmiley = card.querySelector('.smiley.selected');
                if (selectedSmiley) {
                    totalRating += parseInt(selectedSmiley.getAttribute('data-rating'), 10);
                    count++;
                }
            });

            const averageRating = count ? (totalRating / count).toFixed(1) : '0';
            document.getElementById('average-rate').textContent = averageRating;
        }

        document.querySelectorAll('.smiley').forEach(smiley => {
            smiley.addEventListener('click', function() {
                const card = this.closest('.card');
                card.querySelectorAll('.smiley').forEach(s => s.classList.remove('selected'));
                this.classList.add('selected');
                updateAverageRating();
            });
        });

        // Theme toggle functionality
        const themeToggleBtn = document.getElementById('theme-toggle');
        const darkIcon = document.getElementById('theme-toggle-dark-icon');
        const lightIcon = document.getElementById('theme-toggle-light-icon');
        const currentTheme = localStorage.getItem('theme') || 'light';

        const updateThemeIcon = () => {
            if (document.documentElement.classList.contains('dark')) {
                darkIcon.classList.add('hidden');
                lightIcon.classList.remove('hidden');
            } else {
                lightIcon.classList.add('hidden');
                darkIcon.classList.remove('hidden');
            }
        };

        themeToggleBtn.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
            const theme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
            localStorage.setItem('theme', theme);
            updateThemeIcon();
        });

        if (currentTheme === 'dark') {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark');
        }

        updateThemeIcon();
    </script>
</body>
</html>
