    </div>

    <!-- Rate Button -->
    <button class="rate-button">
        <i class="fas fa-thumbs-up"></i> Rate!
    </button>

    <script>
        let selectedRatings = {};

        function updateLanguage(language) {
            const translations = {
                en: {
                    feedbackHeader: "Select Language",
                    feedbackPrompt: "We value your feedback! Please take a moment to rate our toilet services. Your input is essential for us to improve and provide a better experience.",
                    cleanliness: "Cleanliness",
                    facilities: "Facilities",
                    service: "Service",
                    smell: "Smell"
                },
                sr: {
                    feedbackHeader: "Izaberite jezik",
                    feedbackPrompt: "Cijenimo vaše mišljenje! Molimo vas da odvojite trenutak i ocijenite naše toaletne usluge. Vaš doprinos nam je neophodan kako bismo unaprijedili našu uslugu i njen kvalitet.",
                    cleanliness: "Čistoća",
                    facilities: "Sadržaji",
                    service: "Usluga",
                    smell: "Miris"
                },
